{
    "name": "vicephp/virtue-api",
    "type": "library",
    "description": "Making PHP more Pythonic",
    "keywords": ["framework", "micro", "api", "router"],
    "license": "MIT",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "require": {
        "php": ">=7.3",
        "slim/slim": "~4.0"
    },
    "require-dev": {
        "guzzlehttp/psr7": ">=1.6",
        "mockery/mockery": "^1.2",
        "php-di/php-di": "^6.0",
        "phpstan/phpstan": "^0.12.0",
        "phpunit/phpunit": "^8.0 | ^9.0",
        "psr/log": "^1.1"
    },
    "suggest": {
        "guzzlehttp/psr7": "PSR-7 Message Implementation",
        "http-interop/http-factory-guzzle": "HTTP Factory for Guzzle",
        "php-di/php-di": "PHP-DI The dependency injection container for humans",
        "vicephp/virtue-access": "Needed to support Authentication and RouteAccess middleware",
        "psr/log": "Needed to support ErrorLogging middleware"
    },
    "autoload": {
        "psr-4": {
            "Virtue\\Api\\": "src/Api/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Virtue\\Api\\": "tests/Api/"
        }
    }
}
